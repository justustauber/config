# i3status configuration file.
# see "man i3status" for documentation.

# It is important that this file is edited as UTF-8.
# The following line should contain a sharp s:
# ß
# If the above line is not correctly displayed, fix your editor first!

general {
	#output_format = "i3bar"
        colors = true
        interval = 5
	color_good = "#0ed839"
	color_bad = "#e92f2f"
	color_degraded = "#3b48e3"
	#separator = ":|:"	
	#color_separator = "#ffff00"
	
}

order += "load"
order += "cpu_usage"
#order += "cpu_temperature 0"
#order += "ipv6"
order += "disk /"
order += "disk /home"
#order += "run_watch DHCP"
#order += "run_watch VPN"
order += "wireless _first_"
order += "ethernet _first_"
order += "battery 0"
order += "tztime local"
order += "volume master"

cpu_usage {
format=  " %usage"
}

wireless _first_ {
        format_up = ":%essid(%quality)"
	# %bitrate) %ip"
        format_down = ""
}

ethernet _first_ {
        # if you use %speed, i3status requires root privileges
        format_up = "E:%ip (%speed)"
        format_down = "E"
}

battery 0 {
        format = "%status %percentage %remaining"
	status_chr = ""
	status_bat = ""
	status_full = ""
	integer_battery_capacity = "true"
	last_full_capacity = true
	low_threshold = 15
	threshold_type = time
}


run_watch DHCP {
        pidfile = "/var/run/dhclient*.pid"
}

run_watch VPN {
        pidfile = "/var/run/vpnc/pid"
}

tztime local {
	#format = "%Y-%m-%d %H:%M:%S"
	format = "%d.%m(%V) %a(%u) %H:%M"
}

load {
        format = "%1min %5min %15min"
}

disk "/" {
        format = "[/] %avail(%percentage_avail)"
	low_threshold = 5
	threshold_type = percentage_avail
	prefix_type = custom
}

disk "/home" {
	format = "[~] %avail(%percentage_avail)"
	low_threshold = 5
	threshold_type = percentage_avail
	prefix_type = custom
}

volume master {
	format = " %volume"
	format_muted = " %volume"
}

cpu_temperature 0 {
        format = "T: %degrees °C"
}

#(Mod1=Alt; Mod4=Super)
set $mod Mod4
set $terminal urxvt 

hide_edge_borders none
workspace_auto_back_and_forth yes
bindsym $mod+b workspace back_and_forth
default_orientation horizontal

# Cycle through border styles with mod+b
bindsym $mod+o border toggle

new_window pixel 1
for_window [class=(?i)terminator] border pixel 1
# for_window [class=(?i)firefox] border normal

font pango:DejaVu Sans Mono 9

# Use Mouse+$mod to drag floating windows to their wanted position
floating_modifier $mod

# start a terminal
bindsym $mod+Return exec $terminal

# kill focused window
bindsym $mod+Shift+q kill

# start rofi
bindsym $mod+d exec rofi -show run

# change focus
bindsym $mod+h focus left
bindsym $mod+j focus down
bindsym $mod+k focus up
bindsym $mod+l focus right
bindsym $mod+Mod1+h workspace prev_on_output
bindsym $mod+Mod1+l workspace next_on_output

# move focused window
bindsym $mod+Shift+h move left
bindsym $mod+Shift+j move down
bindsym $mod+Shift+k move up
bindsym $mod+Shift+l move right
bindsym $mod+Control+Mod1+h move container to workspace prev_on_output
bindsym $mod+Control+Mod1+l move container to workspace next_on_output

# split in horizontal orientation
bindsym $mod+c split h;exec notify-send 'H'

# split in vertical orientation
bindsym $mod+v split v;exec notify-send 'V'

# enter fullscreen mode for the focused container
bindsym $mod+f fullscreen toggle

# change container layout (stacked, tabbed, toggle split)
bindsym $mod+s layout stacking
bindsym $mod+w layout tabbed
bindsym $mod+e layout toggle split

# toggle tiling / floating
bindsym $mod+Shift+space floating toggle

# change focus between tiling / floating windows
bindsym $mod+space focus mode_toggle

# focus the parent container
bindsym $mod+a focus parent

# focus the child container
#bindsym $mod+d focus child


set $ws1 "1"
set $ws2 "2"
set $ws3 "3"
set $ws4 "4"
set $ws5 "5"
set $ws6 "6"
set $ws7 "7"
set $ws8 "8"
set $ws9 "9"
set $ws10 "10"

# switch to workspace
bindsym $mod+1 workspace $ws1
bindsym $mod+2 workspace $ws2
bindsym $mod+3 workspace $ws3
bindsym $mod+4 workspace $ws4
bindsym $mod+5 workspace $ws5
bindsym $mod+6 workspace $ws6
bindsym $mod+7 workspace $ws7
bindsym $mod+8 workspace $ws8
bindsym $mod+9 workspace $ws9
bindsym $mod+0 workspace $ws10

# move focused container to workspace
bindsym $mod+Shift+1 move container to workspace $ws1
bindsym $mod+Shift+2 move container to workspace $ws2
bindsym $mod+Shift+3 move container to workspace $ws3 
bindsym $mod+Shift+4 move container to workspace $ws4
bindsym $mod+Shift+5 move container to workspace $ws5
bindsym $mod+Shift+6 move container to workspace $ws6
bindsym $mod+Shift+7 move container to workspace $ws7
bindsym $mod+Shift+8 move container to workspace $ws8
bindsym $mod+Shift+9 move container to workspace $ws9
bindsym $mod+Shift+0 move container to workspace $ws10

# reload the configuration file
bindsym $mod+Shift+c reload
# restart i3 inplace
bindsym $mod+Shift+r restart
# exit i3 
bindsym $mod+Shift+e exec "i3-nagbar -t warning -m 'exit i3?' -b 'Yes' 'i3-msg exit'"

# resize window (you can also use the mouse for that)
mode "resize" {
        bindsym h resize shrink width 10 px or 10 ppt
        bindsym j resize grow height 10 px or 10 ppt
        bindsym k resize shrink height 10 px or 10 ppt
        bindsym l resize grow width 10 px or 10 ppt

        # back to normal: Enter or Escape
        bindsym Return mode "default"
        bindsym Escape mode "default"
	bindsym $mod+r mode "default"
}

bindsym $mod+r mode "resize"
set $black #000000 
set $white #ffffff
# class                 border  backgr. text    indicator child_border
client.focused          #4c7899 #285577 $white 	#2e9ef4   #285577
client.focused_inactive #333333 #5f676a $white	#484e50   #5f676a
client.unfocused        #333333 #222222 #888888 #292d2e   #222222
client.urgent           #2f343a #900000 $white	#900000   #900000
client.placeholder      $black  #0c0c0c $white	$black	  #0c0c0c

client.background       $white
# Start i3bar to display a workspace bar (plus the system information i3status
# finds out, if available)
bar {
        status_command i3status
	tray_padding 0

	colors {
        background $black
        statusline $white
        separator #666666

        focused_workspace  #4c7899 #285577 $white
        active_workspace   #333333 #5f676a $white
        inactive_workspace #333333 #222222 #888888
        urgent_workspace   #2f343a #900000 $white
        binding_mode       #2f343a #900000 $white
	}

}

bindsym $mod+Shift+x exec i3lock-wrapper


# Pulse Audio controls
bindsym XF86AudioRaiseVolume exec --no-startup-id pactl set-sink-volume 0 +5% #increase sound volume
bindsym XF86AudioLowerVolume exec --no-startup-id pactl set-sink-volume 0 -5% #decrease sound volume
bindsym XF86AudioMute exec --no-startup-id pactl set-sink-mute 0 toggle # mute sound
exec pactl set-sink-volume 0 -100% #disable sound at startup

# Sreen brightness controls
bindsym XF86MonBrightnessUp exec /home/user/.config/i3/bl_up.sh
bindsym XF86MonBrightnessDown exec /home/user/.config/i3/bl_down.sh


# force app in ws; xprop WM_CLASS(STRING) second value;(?i)=case-insensetive 
#assign [class="(?i)firefox"] $ws4 

#Keybindings
exec_always setxkbmap -option caps:ctrl_modifier
#exec --no-startup-id volumeicon
exec --no-startup-id nm-applet	
exec --no-startup-id pamac-tray
exec --no-startup-id clipit
exec --no-startup-id xautolock -time 10 -locker i3lock-wrapper

# exec_always compton
#
#Start Applications
bindsym $mod+F3 exec thunderbird
bindsym $mod+F4 exec firefox
bindsym $mod+F5 exec pcmanfm
bindsym $mod+Shift+F5 exec gksu pcmanfm

#screensht
bindsym Print --release exec --no-startup-id scrot /home/user/Pictures/screenshots/%F_%H:%M:%S.png -q 100 -s

#Set shutdown,reboot,etc
set $system_power_mode "(s)hutdown, (r)eboot, (l)ock, (Shift+s)uspend(RAM), (h)ibernate(SWAP), (e)xit; (Esc or Enter to Exit)"
mode $system_power_mode {
bindsym s exec poweroff
bindsym r exec reboot
bindsym l exec i3lock-wrapper, mode "default"
bindsym Shift+s exec i3lock-wrapper && systemctl suspend, mode "default"
bindsym h exec i3lock-wrapper && systemctl hibernate, mode "default"
bindsym e exec i3-msg exit, mode "default"
bindsym Escape mode "default"
bindsym Return mode "default"
bindsym $mod+x mode "default"
}
bindsym $mod+x mode $system_power_mode


bindsym $mod+m bar mode toggle

#i3-gaps
gaps inner 10
gaps outer -9
smart_gaps on
smart_borders on

bindsym --release $mod+s exec xdotool key ssharp
